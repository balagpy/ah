<% title_tag 'Resend unlock email' %>

<div class="row">
  <div class="col"></div>
  <div class="col-md-6">
    <div class="card card-lg">
      <div class="card-body">
        <div class="card-title">Resend unlock email</div>

        <%= form_for resource, as: resource_name, url: unlock_path(resource_name), method: :post do |f| %>
          <%= render "shared/error_messages", target: resource %>

          <div class="form-group">
            <%= f.text_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
          </div>

          <div class="form-actions">
            <%= f.submit "Resend unlock email", class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col"></div>
</div>
